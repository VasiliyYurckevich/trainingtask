<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         metadata-complete="true"
         version="4.0">
    <context-param>
        <param-name>
            javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL
        </param-name>
        <param-value>true</param-value>
    </context-param>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.qulix.yurkevichvv.trainingtask.servlets.utils.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.qulix.yurkevichvv.trainingtask.servlets.controllers.EmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>com.qulix.yurkevichvv.trainingtask.servlets.controllers.TaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProjectServlet</servlet-name>
        <servlet-class>com.qulix.yurkevichvv.trainingtask.servlets.controllers.ProjectController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProjectServlet</servlet-name>
        <url-pattern>/projects</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>javax.servlet.ServletException</exception-type>
        <location>/error-servlet.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.io.IOException</exception-type>
        <location>/error-servlet.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.qulix.yurkevichvv.trainingtask.api.exceptions.DaoException</exception-type>
        <location>/error-dao.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error-404.jsp</location>
    </error-page>
    <error-page>
        <location>/error.jsp</location>
    </error-page>
</web-app>